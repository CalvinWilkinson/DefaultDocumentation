<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <DefaultDocumentationCommand>dotnet "$(MSBuildThisFileDirectory)..\tools\DefaultDocumentation.dll" /xml:"$(DocumentationFile)" /markdown:"$(DefaultDocumentationFolder)"</DefaultDocumentationCommand>
  </PropertyGroup>
  <Target Name="DefaultDocumentation" AfterTargets="Build">
    <Exec Command="$(DefaultDocumentationCommand)"/>
  </Target>
</Project>